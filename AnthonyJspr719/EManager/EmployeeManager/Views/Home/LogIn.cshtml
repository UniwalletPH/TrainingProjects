
@{
    ViewData["Title"] = "LogIn";
}


<br>
<h1>LOG IN</h1>
<br>
<div class="row">
    <div class="col-md-4">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

       
        <div class="form-group">
            <label class="control-label">USERNAME</label>
            <input id="txtUsername" class="form-control" />
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">PASSWORD</label>
            <input id="txtPassword" type="password" class="form-control" />
            <span class="text-danger"></span>
        </div>
       
        <div class="form-group">
            <input type="submit" id="btnLogIn" value="LOG IN" class="btn btn-primary" />
        </div>

    </div>



</div>



@section Scripts {

    <script>

        $('document').ready(function () {
            $('#btnLogIn').on('click', function () {


                var _username = $('#txtUsername').val();
                var _password = $('#txtPassword').val();


                var _user =
                {
                    username: _username,
                    password: _password
                };

                $.post('/Home/LogIn', { employee: _user }).done(Reply);




            });
        });


        function Reply(reply) {

            if (reply == true) {
                window.location = "/Home/TimeRecord";
                alert("WELCOME");
            }
            else {

                alert("WRONG PASSWORD / USERNAME");
            }

        }

    </script>
}


